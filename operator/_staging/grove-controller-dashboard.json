{
  "title": "Grove Controller Monitoring",
  "tags": [
    "grove",
    "controller",
    "kubernetes"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Reconciliation Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(controller_runtime_reconcile_total{namespace=\"grove-system\"}[5m])",
          "legendFormat": "{{controller}} - {{result}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Reconciles/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "Reconciliation Errors",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(controller_runtime_reconcile_errors_total{namespace=\"grove-system\"}[5m])",
          "legendFormat": "{{controller}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Errors/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "Reconciliation Duration (p95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(controller_runtime_reconcile_time_seconds_bucket{namespace=\"grove-system\"}[5m])) by (controller, le))",
          "legendFormat": "{{controller}} p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(controller_runtime_reconcile_time_seconds_bucket{namespace=\"grove-system\"}[5m])) by (controller, le))",
          "legendFormat": "{{controller}} p50",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 4,
      "title": "Work Queue Depth",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "workqueue_depth{namespace=\"grove-system\"}",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Queue Depth"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 5,
      "title": "Active Controllers",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "count(controller_runtime_active_workers{namespace=\"grove-system\"})",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 6,
      "title": "Total Reconciliations (24h)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(increase(controller_runtime_reconcile_total{namespace=\"grove-system\"}[24h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 7,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(rate(controller_runtime_reconcile_errors_total{namespace=\"grove-system\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {
              "value": null,
              "color": "green"
            },
            {
              "value": 0.1,
              "color": "yellow"
            },
            {
              "value": 1,
              "color": "red"
            }
          ]
        }
      }
    },
    {
      "id": 8,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{namespace=\"grove-system\",job=\"grove-operator\"}",
          "legendFormat": "RSS",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_alloc_bytes{namespace=\"grove-system\",job=\"grove-operator\"}",
          "legendFormat": "Heap Alloc",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bytes",
          "label": "Memory"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 9,
      "title": "Goroutines",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "targets": [
        {
          "expr": "go_goroutines{namespace=\"grove-system\",job=\"grove-operator\"}",
          "legendFormat": "Goroutines",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 10,
      "title": "API Request Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 28
      },
      "targets": [
        {
          "expr": "rate(rest_client_requests_total{namespace=\"grove-system\"}[5m])",
          "legendFormat": "{{verb}} {{host}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ops",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 11,
      "title": "Workqueue Latency",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 28
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(workqueue_queue_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (name, le))",
          "legendFormat": "{{name}} p95",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 12,
      "title": "PCS → Child Creation Duration (P95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 36
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(grove_pcs_to_child_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (child_type, le))",
          "legendFormat": "PCS → {{child_type}} (p95)",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(grove_pcs_to_child_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (child_type, le))",
          "legendFormat": "PCS → {{child_type}} (p50)",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 13,
      "title": "PCSG → PCLQ Creation Duration (P95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 36
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(grove_pcsg_to_pclq_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (le))",
          "legendFormat": "PCSG → PCLQ (p95)",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(grove_pcsg_to_pclq_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (le))",
          "legendFormat": "PCSG → PCLQ (p50)",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 14,
      "title": "PCLQ → Pod Creation Duration (P95)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 44
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(grove_pclq_to_pod_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (le))",
          "legendFormat": "PCLQ → Pod (p95)",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(grove_pclq_to_pod_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (le))",
          "legendFormat": "PCLQ → Pod (p50)",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 15,
      "title": "Resource Creation Pipeline Overview",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 44
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(grove_pcs_to_child_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (le))",
          "legendFormat": "Stage 1: PCS → Child",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(grove_pcsg_to_pclq_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (le))",
          "legendFormat": "Stage 2: PCSG → PCLQ",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(grove_pclq_to_pod_creation_duration_seconds_bucket{namespace=\"grove-system\"}[5m])) by (le))",
          "legendFormat": "Stage 3: PCLQ → Pod",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Duration"
        },
        {
          "format": "short"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h"
    ]
  }
}
