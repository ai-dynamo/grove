{
  "title": "Grove Controller - Continuous Profiling (Pyroscope)",
  "tags": [
    "grove",
    "profiling",
    "pyroscope",
    "performance"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "CPU Profile - Flame Graph",
      "type": "flamegraph",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "process_cpu:cpu:nanoseconds:cpu:nanoseconds",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "both",
          "refId": "A"
        }
      ],
      "options": {
        "displayMode": "flamegraph"
      }
    },
    {
      "id": 2,
      "title": "Memory Allocations - Flame Graph",
      "type": "flamegraph",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "memory:alloc_objects:count:space:bytes",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "both",
          "refId": "A"
        }
      ],
      "options": {
        "displayMode": "flamegraph"
      }
    },
    {
      "id": 3,
      "title": "CPU Usage Over Time",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "process_cpu:cpu:nanoseconds:cpu:nanoseconds",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "metrics",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ns",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Memory Allocations Over Time",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "memory:alloc_space:bytes:space:bytes",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "metrics",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      }
    },
    {
      "id": 5,
      "title": "In-Use Memory - Flame Graph",
      "type": "flamegraph",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 32
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "memory:inuse_space:bytes:space:bytes",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "both",
          "refId": "A"
        }
      ],
      "options": {
        "displayMode": "flamegraph"
      }
    },
    {
      "id": 6,
      "title": "Top Functions by CPU",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 44
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "process_cpu:cpu:nanoseconds:cpu:nanoseconds",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "both",
          "groupBy": [
            "function_name"
          ],
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "function_name": "Function",
              "value": "CPU Time"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "CPU Time",
            "desc": true
          }
        ]
      }
    },
    {
      "id": 7,
      "title": "Top Functions by Memory",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 44
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "memory:alloc_space:bytes:space:bytes",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "both",
          "groupBy": [
            "function_name"
          ],
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "function_name": "Function",
              "value": "Memory Allocated"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Memory Allocated",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 8,
      "title": "Profile Comparison",
      "type": "flamegraph",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 52
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "process_cpu:cpu:nanoseconds:cpu:nanoseconds",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "both",
          "refId": "A"
        }
      ],
      "options": {
        "displayMode": "comparison"
      },
      "description": "Compare profiles across different time ranges to identify performance regressions"
    },
    {
      "id": 9,
      "title": "Goroutines Profile",
      "type": "flamegraph",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 64
      },
      "targets": [
        {
          "datasource": "Pyroscope",
          "profileTypeId": "goroutines:goroutines:count::count",
          "labelSelector": "{service_name=\"grove-operator\"}",
          "queryType": "both",
          "refId": "A"
        }
      ],
      "options": {
        "displayMode": "flamegraph"
      },
      "description": "Goroutine count and stack traces over time"
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h"
    ]
  }
}
